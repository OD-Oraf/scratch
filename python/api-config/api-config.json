{
    "spec": {
        "assetId": "{{ asset.id }}"
    },
    "routing": [
        {
            "rules": {
                "path": "{{ route1.path }}",
                "methods": "{{ route1.methods }}"
            },
            "upstreams": [
                {
                    "uri": "{{ route1.upstream1 }}",
                    "weight": 50
                },
                {
                    "uri": "{{ route1.upstream2 }}",
                    "weight": 50
                }
            ]
        },
        {
            "rules": {
                "path": "{{ route2.path }}",
                "methods": "{{ route2.methods }}"
            },
            "upstreams": [
                {
                    "uri": "{{ route2.upstream1 }}",
                    "weight": 100
                }
            ]
        }
    ]
}